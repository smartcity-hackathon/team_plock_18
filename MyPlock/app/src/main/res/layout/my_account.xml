<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:padding="15px"
    tools:context=".MyAccount">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="117dp"
        android:layout_height="113dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Hackatończyk"
        android:textColor="#333"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="53dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="190dp"
        android:layout_height="59dp"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/imageView4"
        android:gravity="center"
        android:text="Konto Premium"
        android:textColor="#f46600"
        android:textSize="18sp" />

    <Button
        android:id="@+id/changePassword"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/radbutton"
        android:textColor="#ffffff"
        android:text="Zmień hasło" />

    <Spinner
        android:id="@+id/accountSpinner"
        android:layout_width="346dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginStart="15dp"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/harmonogramBtn"
        android:layout_width="358dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="87dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/radbutton"
        android:textColor="#ffffff"
        android:text="Harmonogram" />
</RelativeLayout>