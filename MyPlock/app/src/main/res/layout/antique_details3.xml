<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AntiqueDetails3"
    android:padding="10dp"
    android:background="#e0e1e0">

    <TextView
        android:id="@+id/title"
        android:layout_width="374dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#333"
        android:text="Muzeum Diecezjalne w Płocku" />

    <TextView
        android:id="@+id/place"
        android:layout_width="229dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title"
        android:textColor="#333"
        android:gravity="center"
        android:text="Tumska 3A" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@+id/place"
        android:layout_centerHorizontal="true"
        android:src="@drawable/muzeum_diecez" />

    <TextView
        android:id="@+id/description"
        android:layout_width="374dp"
        android:layout_height="211dp"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/image"
        android:gravity="center"
        android:textColor="#333"
        android:text="Muzeum Diecezjalne im. bł. abpa. Antoniego Juliana Nowowiejskiego – muzeum w Płocku. Utworzone, jako pierwsze w Królestwie Polskim, przez kapłana diecezji płockiej ks. Antoniego Juliana Nowowiejskiego, późniejszego biskupa płockiego.Zbudowano je w 1903 r. według projektu architekta Stefana Szyllera. Dalszym współtworzeniem muzeum od roku 1913 zajmował się z ramienia bp. Nowowiejskiego, ks. Franciszek Giergielewicz." />
</RelativeLayout>