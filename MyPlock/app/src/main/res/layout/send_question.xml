<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendQuestion"
    android:paddingTop="60dp"
    android:background="#e0e1e0">


    <EditText
        android:id="@+id/editText3"
        android:layout_width="359dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:ems="10"
        android:hint="Tytuł pytania"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView3"
        android:layout_width="360dp"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:layout_marginStart="14dp"
        android:hint="Treść pytania"
        android:textAlignment="center" />

    <Button
        android:id="@+id/askQuestionBtn"
        android:layout_width="361dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="@drawable/radbutton"
        android:text="Zadaj pytanie"
        android:textColor="#ffffff"
        android:textSize="18sp" />


</RelativeLayout>