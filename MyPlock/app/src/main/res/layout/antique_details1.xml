<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AntiqueDetails1"
    android:padding="10dp"
    android:background="#e0e1e0">

    <TextView
        android:id="@+id/title"
        android:layout_width="374dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#333"
        android:text="Zamek książąt mazowieckich w Płocku" />

    <TextView
        android:id="@+id/place"
        android:layout_width="229dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title"
        android:textColor="#333"
        android:gravity="center"
        android:text="Tumska 2" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@+id/place"
        android:layout_centerHorizontal="true"
        android:src="@drawable/zamek_ksia" />

    <TextView
        android:id="@+id/description"
        android:layout_width="374dp"
        android:layout_height="211dp"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/image"
        android:gravity="center"
        android:textColor="#333"
        android:text="Zamek książąt mazowieckich w Płocku – gotycka budowla wzniesiona przez Kazimierza Wielkiego, siedziba książąt mazowieckich do końca XV wieku. Zamek królewski położony był w drugiej połowie XVI wieku w powiecie płockim województwa płockiego." />
</RelativeLayout>