<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Report"
    tools:showIn="@layout/activity_report"
    android:id="@+id/relativeLayout"
    android:paddingTop="60dp"
    android:background="#e0e1e0">


    <EditText
        android:id="@+id/reportTitle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textAlignment="center"
        android:hint="Nazwa zdarzenia" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chooseService"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Opis miejsca"
        android:inputType="textMultiLine"
        android:textAlignment="center" />

    <Button
        android:id="@+id/sendReportBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Wyślij zgłoszenie"
        android:background="@drawable/radbutton"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/textView"
        android:background="@drawable/radbutton"
        android:layout_marginRight="8dp"
        android:text="Dodaj zdjecie" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:text="Lokalizacja"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/chooseService"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reportTitle"
        android:spinnerMode="dropdown"/>

</RelativeLayout>