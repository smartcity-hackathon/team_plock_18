<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e1e0"
    android:padding="10dp">


    <EditText
        android:id="@+id/editText2"
        android:layout_width="374dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="TytuÅ‚ wydarzenia" />

    <Spinner
        android:id="@+id/spinnerAddEvent"
        android:layout_width="369dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText2"
        android:spinnerMode="dropdown"/>

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView2"
        android:layout_width="368dp"
        android:layout_height="225dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerAddEvent"
        android:hint="Opis wydarzenia" />

    <EditText
        android:id="@+id/date1"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/multiAutoCompleteTextView2"
        android:ems="10"
        android:hint="Od kiedy" />

    <EditText
        android:id="@+id/date2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/multiAutoCompleteTextView2"
        android:ems="10"
        android:hint="Do kiedy" />


    <EditText
        android:id="@+id/editText5"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date1"
        android:ems="10"
        android:hint="Miejsce wydarzenia"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f46600"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Dodaj wydarzenie" />
</RelativeLayout>